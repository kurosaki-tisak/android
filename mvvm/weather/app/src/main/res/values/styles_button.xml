<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Weather.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/common_error_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/common_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/common_button_min_height</item>
    </style>

    <style name="Weather.Button.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/common_error_text_color</item>
        <item name="android:minHeight">@dimen/common_button_min_height</item>
        <item name="android:background">@color/common_error_button_background_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>